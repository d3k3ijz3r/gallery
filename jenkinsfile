pipeline {
    agent any
        tools {nodejs "nodejs"}
    
    stages { 
        
        stage('Clone repository') {
            steps{
                //Checkout the source code from the github repository
                git branch: 'master', 
                credentialsId: 'f57ccdab-f5db-4730-8267-7571bd823439', url: 'https://github.com/d3k3ijz3r/gallery.git'
                }
            }
        
        stage('Install dependencies') {
            steps {
                //dependencies
                sh 'npm install' 
            }
        }

        stage ('Build') {
            steps { 
                //Builds node 
                sh 'node index.js &'
            }
        }

        stage ('Run Tests') {
            steps {
                //Testing with npm
                try {
                sh 'npm test'
                } catch (Exception e) {
                    currentBuild.result = 'FAILURE'
                    emailext (
                        subject: "Test Failure in Build #${env.BUILD_NUMBER}",
                        body: "The test step failed in build #${env.BUILD_NUMBER}. Please invesitage.",
                        to: 'george.dekeijzer@student.moringaschool.com'
                    )
                    error "Test failure detected."
                }
            }    
        }

          stage('Send Slack Notification') {
             steps {
                script {
                    slackSend (
                        channel: '#georgedekeijzer_ip1',
                        color: currentBuild.result == 'SUCCESS' ? 'good' : 'danger',
                        message: currentBuild.result == 'SUCCESS' ? "Deployment successful! Build ID: ${env.BUILD_ID}" : "Deployment failed! Build ID: ${env.BUILD_ID}",
                        webhookUrl: 'https://hooks.slack.com/services/XXXXXXXXX/YYYYYYYYY/zzzzzzzzzzzzzzzzzzzzzzzz' 
                    )
                 }
            }
        }

        stage('Deploy to Vercel') {
            steps{
                sh 'npm install -g vercel'
                sh 'vercel --token '
            }
        }

    }

}

 
