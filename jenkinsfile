pipeline {
    agent any
        tools {nodejs "nodejs"}

        triggers {
            //triggering pipeline every new commit to branch 
            scm('*5****')
            
            //Or, triggering pipeline only when commiting changes to a specific branch
            scm([
            $class: 'PollingGitSCM',
            branches: [[name: 'main']],
            pollSCM: true

            ])
        }     
    

    stages { 
        
        stage('Clone repository') {
            steps{
                //Checkout the source code from the github repository
                git branch: 'master', 
                credentialsId: 'f57ccdab-f5db-4730-8267-7571bd823439', url: 'https://github.com/d3k3ijz3r/gallery.git'
                }
            }
        
        stage('Install depndencies') {
            steps {
                //Test
                sh 'npm install' 
            }
        }

        stage ('Build') {
            steps { 
                //Builds node 
                sh 'npm install'
            }
        }

        stage ('Run Tests') {
            steps {
                //Testing with npm
                sh 'npm test'
            }
        }

        stage('Deploy Vercel') {
            steps{
                sh 'npm install -g vercel'
                sh 'vercel --token ob6QqIouXK689gK1zyubeZmx'
            }
        }

    }

}

 
