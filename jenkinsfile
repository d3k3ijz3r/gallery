pipeline {
    agent any

        tools {nodejs "nodejs"}
    
    stages { 
        
        stage('Clone repository') {
            steps{
                //Checkout the source code from the github repository
                git branch: 'master', 
                credentialsId: 'f57ccdab-f5db-4730-8267-7571bd823439', url: 'https://github.com/d3k3ijz3r/gallery.git'
                }
            }
        
        stage('Install dependencies') {
            steps {
                //Test
                sh 'npm install' 
            }
        }

        stage ('Build') {
            steps { 
                //Builds node 
                sh 'npm install'
            }
        }

        stage ('Run Tests') {
            steps {
                //Testing with npm
                sh 'npm test'
            }
        }

        post {
            success {
                script{ 
                    slackSend (
                        channel: '#georgedekeijzer_ip1',
                        color:'good',
                        message: "Deployment successful! Build ID: ${env.BUILD_ID}",
                        webhookUrl: 'https://hooks.slack.com/services/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'
                    )
                }
            }
            failure {
                script (
                    slackSend (
                        channel: '#georgedekeijzer_ip1',
                        color: 'danger'
                        message: "Deployment unnsuccesful! Build ID: ${env.BUILD_ID}",
                        webhookUrl: 'https://hooks.slack.com/services/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'
                    )
                )
            }
        }

        stage('Deploy to Vercel') {
            steps{
                sh 'npm install -g vercel'
                sh 'vercel --token '
            }
        }

    }

}

 
