pipeline {
    agent any 
    tools {nodejs "nodejs"}

    stages { 

        stage('Clone repository') {
            steps{
                //Checkout the source code from the github repository
                git branch: 'master', 
                git 'git credentialsId: 'f57ccdab-f5db-4730-8267-7571bd823439', url: 'https://github.com/d3k3ijz3r/java-todo.git''
                }
            }
        
        stage('Install depndencies') {
            steps {
                //Test
                sh 'npm install' 
            }
        }
        
        stage('Test') {
            steps{
                sh 'npm install pm2-g'
            }
        } 

        stage('Deploy') {
            steps{
                sh 'pm2 start server.js'
            }
        }

    }     
    
}

 
