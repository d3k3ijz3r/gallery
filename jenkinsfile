pipeline {
    agent any
        tools {nodejs "nodejs"}

    stages { 
        
        stage('Clone repository') {
            steps{
                //Checkout the source code from the github repository
                git branch: 'master', 
                credentialsId: 'f57ccdab-f5db-4730-8267-7571bd823439', url: 'https://github.com/d3k3ijz3r/gallery.git'
                }
            }
        
        stage('Install depndencies') {
            steps {
                //Test
                sh 'npm install' 
            }
        }

        stage ('Build') {
            steps { 
                //Builds node 
                sh 'npm install'
            }
        }

        stage ('Run Tests') {
            steps {
                //Testing with npm
                sh 'npm test'
            }
        }

        stage('Deploy to Render') {
            steps{
            //Installing render CLI 
            sh 'curl -sL https://render.com/install.sh' | sh 

            //Authentication
            sh 'render login --email dekegijo@gmail.com --password rnd_Cws9W8j9NRpdBPFMCeaiwIo5kPt0'

            //Deploying 
            sh 'render deploy --name IP_PROJECT_DEKEIJZER --branch master'
            sh 'npm start'
            }
        }

    }     
    
}

 
