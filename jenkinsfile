pipeline {
    agent any 
    tools {nodejs "nodejs"}

    stages { 

        stage('Clone repository') {
            steps{
                //Checkout the source code from the github repository
                git branch: 'master', 
                url: 'https://github.com/d3k3ijz3r/java-todo.git'
                }
            }
        
        stage('Install depndencies') {
            steps {
                //Test
                sh 'npm install' 
            }
        }

        stage('Deploy') {
            steps{
                sh 'startOrRestart server.js'
            }
        }

    }     
    
}

 
